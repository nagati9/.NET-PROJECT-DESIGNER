



<!DOCTYPE html>

<div class="text-center">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        img {
            display: flex;
            z-index: 1;
            height: 300px;
            width: 300px;
            align-items: center;
        }


        #welcome {
            display: flex;
            z-index: 1;
            color: white;
            font-size: 30px;
            font-weight: bold;
            align-items: safe center;
        }





        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            background-color: #3D3939;
        }

        .container2 {
            display: flex;
            height: 100%;
            align-items: center;
            justify-content: center;
            margin: 5%;
        }


        .button {
            background-color: #3D3939;
            width: 200px;
            height: 100px;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 10px 5px;
            cursor: pointer;
        }

        buttons:hover {
            opacity: 0.7;
        }


        .buttons {
            display: flex;
            align-items: center;
            gap: 60px;
        }
    </style>

    <div class="container">

        <div id="icon">

            <img src="../Images/calendar.png" alt="Calendar Icon">

        </div>
        <p id="welcome">Welcome to Project Designer !</p>

    </div>


    <div class="container2">
        <div class="buttons">
            <!-- Redirect to "listProjects" view -->
            <a href="@Url.Action("projectTab", "Projects", new {  profilUserId = @ViewBag.profilUserId })" class="button">Create new project</a>

            <!-- Redirect to "projectTab" view -->
            <a href="@Url.Action("listProjects", "Projects" ,  new {  profilUserId = @ViewBag.profilUserId })" class="button">Manage</a>
        </div>
    </div>

    <script>
        // Retrieve data from the server
        var dataFromServer = '@ViewBag.profilUserId';

        // Store data in local storage
        localStorage.setItem('myData', dataFromServer);

        // You can now use the data stored in localStorage as needed
        var retrievedData = localStorage.getItem('myData');
        console.log('Data retrieved from localStorage:', retrievedData);
    </script>

</div>




