@model ANA_ProjectDesigner.Models.UpdateProfilViewModel

@{
}


<!DOCTYPE html>

<style>
    * {
        padding: 0;
        margin: 0;
    }

    body {
        background: url(http://wrbbradio.org/wp-content/uploads/2016/10/grey-background-07.jpg) no-repeat center fixed;
        background-size: cover;
        background-color: #3D3939;
    }

    .container {
        background-color: #ECE0E0;
        width: 350px;
        height: 400px;
        padding-bottom: 20px;
        position: absolute;
        top: 60%;
        left: 50%;
        transform: translate(-50%, -50%);
        margin: auto;
        padding: 70px 50px 20px 50px;
    }


    .fl {
        float: left;
        width: 110px;
        line-height: 35px;
    }

    .fontLabel {
        color: white;
    }

    .fr {
        float: right;
    }

    .clr {
        clear: both;
    }

    .box {
        width: 360px;
        height: 35px;
        margin-top: 10px;
        font-family: verdana;
        font-size: 12px;
    }

    .textBox {
        height: 35px;
        width: 190px;
        border: none;
        padding-left: 20px;
    }

    .new {
        float: left;
    }

    .iconBox {
        height: 35px;
        width: 40px;
        line-height: 38px;
        text-align: center;
        background: #B20D0D;
    }

    .radio {
        color: white;
        background: #2d3e3f;
        line-height: 38px;
    }

    .terms {
        line-height: 35px;
        text-align: center;
        background: #2d3e3f;
        color: white;
    }

    .submit {
        float: right;
        border: none;
        color: white;
        width: 110px;
        height: 35px;
        background: #B20D0D;
        text-transform: uppercase;
        cursor: pointer;
    }

    ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
    }

    #signup {
        margin-bottom: 10%;
        margin-top: -10%;
        margin-left: 50%;
        justify-content: center;
        TEXT-
    }
</style>
<body>




    <!-- Body of Form starts -->
    <div class="container">
        <form action="DataProfil" method="post">
            <p id="signup">Edit Profil</p>

            <div class="box">
                <div class="form-group">

                    <input asp-for="Id" readonly class="textBox" />
                </div>
                <div class="clr"></div>
            </div>
            <!--First name-->
            <div class="box">

                <label for="firstName" class="fl fontLabel"> First Name: </label>
                <div class="new iconBox">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="FirstName" class="textBox" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="clr"></div>
            </div>
            <!--First name-->
            <!--Second name-->
            <div class="box">
                <label for="secondName" class="fl fontLabel"> Seconed Name: </label>
                <div class="fl iconBox"><i class="fa fa-user" aria-hidden="true"></i></div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="LastName" class="textBox" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="clr"></div>
            </div>
            <!--Second name-->
            <!---Phone No.------>
            <div class="box">
                <label for="phone" class="fl fontLabel"> Phone No.: </label>
                <div class="fl iconBox"><i class="fa fa-phone-square" aria-hidden="true"></i></div>


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="PhoneNumber" type="text" required name="phoneNumber" maxlength="10" placeholder="Phone No." class="textBox" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="clr"></div>
            </div>
            <!---Phone No.---->
            <!---Email ID---->
            <div class="box">
                <label for="Email" class="fl fontLabel"> Email ID: </label>
                <div class="fl iconBox"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                <div class="form-group">

                    <input asp-for="Email" type="text" required name="Email" placeholder="E-mail Adress" class="textBox" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="clr"></div>
            </div>
            <!--Email ID----->
            <!---Password------>
            <div class="box">
                <label for="password" class="fl fontLabel"> Password </label>
                <div class="fl iconBox"><i class="fa fa-key" aria-hidden="true"></i></div>
                <div class="form-group">

                    <input asp-for="Password" type="text" required name="password" maxlength="20" placeholder="Password" class="textBox" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="clr"></div>
            </div>
            <!---Password---->
            <!--Country-->
            <div class="box">

                <label for="country" class="fl fontLabel"> Country: </label>
                <div class="new iconBox">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="Country" class="textBox" placeholder="type country" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>



                <!---Submit Button------>
                <div class="box" style="background: #2d3e3f">
                    <input type="submit" name="Submit" class="submit" value="Create">

                </div>
                <!---Submit Button----->

                <button tyoe="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Profils">Delete profil</button>

        </form>

    </div>
    <!--Body of Form ends--->
</body>