@using ANA_ProjectDesigner.Models.Domain;
@model List<ANA_ProjectDesigner.Models.Domain.Project>







<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Votre Page</title>
    <link rel="stylesheet" type="text/css" href="~/css/projectDetail.css">
    <style>
        body{
            display: flex;
            flex-direction: column;
        }
        #head {
            display:flex;
            flex-direction:row;

            background-color: #3D3939;
            height: 1%;
        }

        #cal {
            display: flex;
            height: 10%;
            width: 10%;
        }
        #cal{
            display: flex;
            align-self:center;
            justify-content:center;
        }

        #prj{
            display: flex;
            align-content:center;
            align-self:center;
            justify-self:center;
            justify-content:center;
            background-color:white;
            width:20%;
            height:20%;
            position:center;
        }
    </style>
</head>
<body>
    <div id="head">

        <img id="cal" src="/images/Logo_Calendar.svg" alt="Illustration" />
        <div id="dropdown">
        <select onchange="redirectToProject(this)">
            <option value="overview" selected>Overview</option>
            @foreach (var project in Model)
            {
                <option value="@project.Id">@project.Name</option>
            }
        </select>
        <form id="projectForm" asp-controller="Project" asp-action="ProjectDetail" method="post">
            <input type="hidden" id="selectedProjectId" name="projectId" />
        </form>
        </div>
        <script>
            function redirectToProject(selectElement) {
                var selectedValue = selectElement.value;
                if (selectedValue === "overview") {
                    window.location.href = "@Url.Action("Overview", "Profil")";
                } else {
                    document.getElementById('selectedProjectId').value = selectedValue;
                    document.getElementById('projectForm').submit();
                    window.location.href = '/Project/ProjectDetail?projectId=' + selectedValue;
                }
            }
        </script>
        </div>
    <p id="prj">
       Projects
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <td>
                        <button onclick="openEditPopup('@project.Id', '@project.Name', '@project.Description')">Edit</button> |
                        |
                        <form action="@Url.Action("DeleteProject", "Profil")" method="post">
                            <input type="hidden" name="id" value="@project.Id" />
                            <button type="submit">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>


    </table>




    <p id="prj">
       Ressources
    </p>


    <form id="sprintForm" asp-controller="Ressource" asp-action="ListResources" method="get">
    @if (ViewBag.Ressources != null && ViewBag.Ressources.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Capacité</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ressource in ViewBag.Ressources)
                {
                    <tr>
                        <td>@ressource.Name</td>
                        <td>@ressource.Capacity</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Aucune ressource trouvée.</p>
    }
    </form>



    <button onclick="openPopup('Add')">Add Ressource</button>

    <!-- Rest of your HTML and scripts for popups and functionality -->


    <button onclick="openPopup('Add')">Create New Project</button>
    <!-- Div pour la pop-up -->
    <div class="popup" id="popup">
        <h2>New Project</h2>
        <form action="CreateProject" method="post">
            <div class="button">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" placeholder="Enter project name">
            </div>

            <div>
                <label for="description">Description:</label>
                <input type="text" class="inputSize" id="description" name="description" placeholder="Enter project description">
            </div>

            <button type="submit" name="Submit">Save</button>
        </form>
    </div>


    <div class="popup" id="popupEdit">
        <h2>Edit Project</h2>
        <form id="editProjectForm" method="post">
            <div class="button">
                <label for="editName">Name:</label>
                <input type="text" id="editName" name="editName" placeholder="Enter project name">
            </div>

            <div>
                <label for="editDescription">Description:</label>
                <input type="text" class="inputSize" id="editDescription" name="editDescription" placeholder="Enter project description">
            </div>

            <button type="submit" name="Submit">Save</button>
        </form>
    </div>

   

    <!-- Div pour l'arrière-plan obscurci de la pop-up -->
    <div class="overlay" id="overlay" onclick="closePopup()"></div>

    <script>

        // Function to open the edit popup
        function openEditPopup(id, name, description) {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('popupEdit').style.display = 'block';

            document.getElementById('editName').value = name;
            document.getElementById('editDescription').value = description;

            document.getElementById('editProjectForm').addEventListener('submit', function (event) {
                event.preventDefault();
                var formData = new FormData(this);

                fetch('@Url.Action("EditProject", "Profil")' + '?id=' + id, {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        if (response.ok) {
                            window.location.reload();
                        } else {
                            console.error('Project edit failed.');
                        }
                    })
                    .catch(error => {
                        console.error('Error editing project:', error);
                    });
            });
        }

        // Rest of your script remains unchanged


        

        // Fonction pour ouvrir la pop-up
        function openPopup(content) {
            document.getElementById('overlay').style.display = 'block';
            switch (content) {
                case 'Add':
          
                    document.getElementById('popup').style.display = 'block';
                    break;
                case 'Delete':
                    document.getElementById('popupDelete').style.display = 'block';
                    break;
                case 'Edit':
                    document.getElementById('popupEdit').style.display = 'block';
                    break;
                default:
                    console.log(`Content not found`);
            }
        }

        // Fonction pour fermer la pop-up
        function closePopup() {
            document.getElementById('popup').style.display = 'none';
            document.getElementById('popupDelete').style.display = 'none';
            document.getElementById('popup').style.display = 'none';
            document.getElementById('popupWorkItem').style.display = 'none';
            document.getElementById('popupAddRessource').style.display = 'none';
            document.getElementById('overlay').style.display = 'none';
        }


        function deleteProject(projectId) {
            if (confirm('Are you sure you want to delete this project?')) {
                var formData = new FormData();
                formData.append('id', projectId);

                fetch('@Url.Action("DeleteProject", "Profil")', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        if (response.ok) {
                            // Reload the page or update UI as needed
                            window.location.reload(); // Example: reload the page
                        } else {
                            console.error('Project deletion failed.');
                        }
                    })
                    .catch(error => {
                        console.error('Error deleting project:', error);
                    });
            }
        }



      
    </script>


</body>
</html>
